div(id="experiences")
    .jumbotron.wow.fadeIn
        h1
            |#{nav["experiences"]}
        hr(class="my-4")
        div
            each experience,i in resume.experiences
                .card
                    .card-block
                        h3(class="card-title")|#{experience.name}
                        p(class="card-text")
                            div
                                |任職期間：#{experience.time} 
                        p(class="card-text")
                            #{short}
                            ol
                                    each description,i in experience.descriptions
                                        li
                                            |#{description} 
                        .text-right
                            each use,i in experience.uses
                                    div(class="badge badge-lg badge-default")
                                       |#{use} 
            +navigate("works") 
