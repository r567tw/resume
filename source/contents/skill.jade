//- 技能
div(id="#{resume.data[1].id}")
    .jumbotron.wow.fadeIn
        h1
            |#{resume.data[1].name}
        hr(class="my-12")
        div(class="row skill-block text-center")
            each skill,i in resume.data[1].skills
                        div(class="col-md-6")
                            span(class="skill-title")|#{skill.name}:
                            //-展示星星數
                            span 
                                each _,i in Array(10)
                                    if i < skill.star
                                        i(class="fa fa-star",aria-hidden="true")
                                    else
                                        i(class="fa fa-star-o",aria-hidden="true")
        .text-center
            a(class="btn btn-lg btn-primary btn-more",href="#works",data-id="works")
                i(class="fa fa fa-arrow-down animated infinite fadeIn",aria-hidden="true")