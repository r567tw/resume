//- 技能
div(id="skills")
    .jumbotron.wow.fadeIn
        h1
            |#{nav["skills"]}
        hr(class="my-12")
        div(class="row skill-block text-center")
            each skill,i in resume.skills
                        div(class="col-md-6")
                            span(class="skill-title")
                                img(src="#{skill.icon}",name="#{skill.name}")
                            //-展示星星數
                            span 
                                each _,i in Array(10)
                                    if i < skill.star
                                        i(class="fa fa-star",aria-hidden="true")
                                    else
                                        i(class="fa fa-star-o",aria-hidden="true")
        +navigate("experiences")