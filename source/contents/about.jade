//- 簡介
div(id="about")
    .jumbotron.wow.fadeIn
        h1
            |#{nav["about"]}
        hr(class="my-4")
        .card
            .card-block
                div(class="col-md-2 float-right")
                    img(class="img-fluid rounded-circle",src="#{resume.about.photo}")
                h3(class="card-title") #{resume.about.name} 
                p(class="card-text")
                    each insterested,i in resume.about.interesteds
                        h5(class="badge badge-lg badge-info")
                            |#{insterested}
                p(class="card-text")
                    |#{resume.about.bio}
        .card
            .card-block
                p(class="card-text")
                    |#{resume.about.intro}
